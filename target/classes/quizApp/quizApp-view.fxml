<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="488.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizApp.quizAppController">
   <children>
      <!-- Question Text -->
      <Text fx:id="txtQuestion" layoutX="40.0" layoutY="50.0" wrappingWidth="500.0" text="Question Text Here">
         <font>
            <Font size="24.0" />
         </font>
      </Text>

      <!-- Timer Label -->
      <Label fx:id="lbltimerDisplay" layoutX="450.0" layoutY="10.0" text="Time: 00:00" />

      <!-- Radio Buttons for Answer Options -->
      <RadioButton fx:id="optionA" layoutX="50.0" layoutY="100.0" mnemonicParsing="false" text="Option A" />
      <RadioButton fx:id="optionB" layoutX="50.0" layoutY="150.0" mnemonicParsing="false" text="Option B" />
      <RadioButton fx:id="optionC" layoutX="50.0" layoutY="200.0" mnemonicParsing="false" text="Option C" />
      <RadioButton fx:id="optionD" layoutX="50.0" layoutY="250.0" mnemonicParsing="false" text="Option D" />

      <!-- Buttons for Quiz Navigation -->
      <Button fx:id="btnStart" layoutX="50.0" layoutY="400.0" mnemonicParsing="false" onAction="#start" text="Start" />
      <Button fx:id="btnNext" layoutX="150.0" layoutY="400.0" mnemonicParsing="false" onAction="#onbtnNext" text="Next" />
      <Button fx:id="btnBack" layoutX="250.0" layoutY="400.0" mnemonicParsing="false" onAction="#onbtnBack" text="Back" />
      <Button fx:id="btnSubmit" layoutX="350.0" layoutY="400.0" mnemonicParsing="false" onAction="#onbtnSubmit" text="Submit" />
   </children>
</AnchorPane>
